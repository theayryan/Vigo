<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_background"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp">


    <LinearLayout
        android:id="@+id/go_auto_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="2dip"
            android:paddingBottom="5dp"
            android:src="@drawable/go_auto"
            />

        <TextView
            android:id="@+id/go_auto_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="GoAuto"
            android:textColor="@color/appMain"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_compact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="2dip"
            android:paddingBottom="5dp"
            android:src="@drawable/go_compact"
            />

        <TextView
            android:id="@+id/go_compact_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="GoCompact"
            android:textColor="@color/appMain"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_stretch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="2dip"
            android:paddingBottom="5dp"
            android:src="@drawable/go_stretch"
            />

        <TextView
            android:id="@+id/go_stretch_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="GoStretch"
            android:textColor="@color/appMain"
            android:textSize="20sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/go_supreme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="2dip"
            android:paddingBottom="5dp"
            android:src="@drawable/go_supreme"
            />

        <TextView
            android:id="@+id/go_supreme_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="GoSupreme"
            android:textColor="@color/appMain"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
